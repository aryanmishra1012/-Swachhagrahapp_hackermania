<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFB2"
    android:layout_height="match_parent"
    tools:context="com.example.hs140.splash.Ghmcrating">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- my profile and myposts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GHMC RATING.."
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="30dp"/>
            </LinearLayout>

            <!-- post1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="159dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=" Rajiv Gandhi Nagar, Jeedimetla, Hyderabad, Telangana 500055 "
                        android:textStyle="bold" />


                    <ImageView
                        android:layout_width="264dp"
                        android:layout_height="100dp"

                        android:layout_gravity="center_horizontal"

                        android:layout_marginLeft="0dp"
                        android:foregroundGravity="center_horizontal"
                        android:src="@drawable/a" />

                    <RatingBar
                        android:id="@+id/ratingBar23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:ignore="DuplicateIds" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="ExtraText">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:text="GHMC CIRCLE OFFICE,\nWest Marredpally,\nsunderabad, Telangana\n 500026 " />

                    />


                    <ImageView
                        android:layout_width="240dp"
                        android:layout_height="100dp"

                        android:layout_gravity="center_horizontal"

                        android:foregroundGravity="center_horizontal"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/kutkatpally"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:text="GHMC OFFICE, GEETHA NAGAR,
  Hyderabad, Telangana " />
                    />


                    <ImageView
                        android:layout_width="240dp"
                        android:layout_height="100dp"

                        android:layout_gravity="center_horizontal"

                        android:foregroundGravity="center_horizontal"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/greaterhyd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"

                android:background="@drawable/login_button_bg"
                android:clickable="true"
                android:padding="10dp"

                android:textColor="@color/colorPrimary"
                android:id="@+id/file"
                android:text="File new complain"
                />

        </LinearLayout>

    </ScrollView>



